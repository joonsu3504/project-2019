/* v0.2.0 */

.head {
    color:blueviolet
    text-align: center;
    font-size: 40px;
    margin:20px;
}

h1{
    color: #44d3ff;
    background: #6868e1;
    text-align: center;
    
}

ul {
    background: #2986ee;
    padding: 0px 10px 10px 15px;
    list-style: none;
    text-align: left;
}

ul li {
    font-size: 25px;
    margin-right: 30px;
    display: inline;
}

ul li a {
    font-size: 15px;
    color: #8888ff;
    font-weight: bolder;
    text-decoration:none;
}

.block{
    padding: 10px;
    margin-right: 50px;
    font-size: 60px;
    color: #5f7cee;
    background: #bbb9ff;
    display: inline;
    border: 3px solid;
    
}
.section1{
    padding: 1px 0px 20px 0px;
    margin: 40px;
    text-align: center;
    background-color: #F8E0EC;
}

.section2{
    margin: 20px 0px 40px 0px;
    text-align: center;
    background-color: #F8E0EC;
}

h3{
    margin-bottom: 30px;
}